		<zk.version>7.0.1</zk.version>
		<maven.build.timestamp.format>yyyy-MM-dd</maven.build.timestamp.format>
		<packname>-${project.version}</packname>
		<artifactory.location>http://romeo.intelis.cz:8080/artifactory</artifactory.location>
	</properties>
	<packaging>war</packaging>
	<name>Dataminer UI</name>
