	<repositories>
	<!-- Override Maven central and snapshots repository to Artifactory -->
	   <repository>
			<id>central</id>
			<url>${artifactory.location}/libs-release</url>
			<snapshots>
				<enabled>false</enabled>
			</snapshots>
		</repository>
		<repository>
			<id>snapshots</id>
			<url>${artifactory.location}/libs-snapshot</url>
		    <releases>
				<enabled>false</enabled>
			</releases>
	    </repository>
	</repositories>
	<pluginRepositories>
		<pluginRepository>
			<id>central</id>
	        <url>${artifactory.location}/plugins-release</url>
	        <snapshots>
	        	<enabled>false</enabled>
	        </snapshots>
	    </pluginRepository>
	    <pluginRepository>
	        <id>snapshots</id>
	        <url>${artifactory.location}/plugins-snapshot</url>
	        <releases>
				<enabled>false</enabled>
	        </releases>
	    </pluginRepository>	
	</pluginRepositories>
